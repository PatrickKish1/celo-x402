# OnchainKit Configuration
# Get your API key from: https://onchainkit.xyz/
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# Reown (WalletConnect) Configuration (REQUIRED for wallet connection)
# Get your project ID from: https://cloud.reown.com
NEXT_PUBLIC_REOWN_PROJECT_ID=your_reown_project_id_here
# Alternative name (backwards compatible)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_reown_project_id_here

# CDP API Configuration (REQUIRED for real x402 payments)
# Get your API keys from: https://portal.cdp.coinbase.com/
CDP_API_KEY_ID=your_cdp_api_key_id
CDP_API_KEY_SECRET=your_cdp_api_key_secret

# For client-side usage (optional, use with caution)
NEXT_PUBLIC_CDP_API_KEY_ID=your_cdp_api_key_id
NEXT_PUBLIC_CDP_API_KEY_SECRET=your_cdp_api_key_secret

# Receiver Wallet Configuration
# This is where x402 payments will be sent
RECEIVER_WALLET=0xYourWalletAddress

# x402 Platform Configuration
NEXT_PUBLIC_PLATFORM_NAME=X402 Manager
NEXT_PUBLIC_PLATFORM_DESCRIPTION=Professional platform for managing and discovering x402 APIs

# Network Configuration
NEXT_PUBLIC_DEFAULT_NETWORK=base
NEXT_PUBLIC_DEFAULT_CURRENCY=USDC

# Facilitator Configuration
NEXT_PUBLIC_FACILITATOR_URL=https://api.cdp.coinbase.com/platform/v2/x402
NEXT_PUBLIC_FACILITATOR_NAME=cdp
NEXT_PUBLIC_BAZAAR_URL=https://api.cdp.coinbase.com/platform/v2/x402/discovery/resources

# Supported Networks (comma-separated)
NEXT_PUBLIC_SUPPORTED_NETWORKS=base,base-sepolia,polygon,optimism,arbitrum

# Cross-Chain Configuration
# Squid Router for cross-chain swaps (REQUIRED for cross-chain payments)
NEXT_PUBLIC_SQUID_INTEGRATOR_ID=x402-manager

# LayerZero (Optional - for advanced cross-chain features)
# LAYERZERO_ENDPOINT=your_layerzero_endpoint
# LAYERZERO_API_KEY=your_layerzero_api_key

# Optional: Analytics and Monitoring
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Optional: Database Configuration (for future use)
# DATABASE_URL=your_database_connection_string
# DATABASE_AUTH_TOKEN=your_database_auth_token

# ZK Proof Configuration (Optional - for future zkx402 integration)
# ZK_PROOF_VERIFIER_URL=your_zk_proof_verifier_url
# ZK_PROOF_API_KEY=your_zk_proof_api_key
